.footer {
  padding: 48px 0 35px;

  background: var(--gray-20);

  text-align: center;

  @media (max-width: 700px) {
    padding: 32px 0 19px;
  }

  &__copyright {
    display: block;
    margin-bottom: 13px;
  }

  &__license {
    display: block;
    margin-bottom: 28px;

    font-size: ms(-1)rem;

    @media (max-width: 700px) {
      margin-bottom: 20px;
    }

    a {
      color: var(--link--color_hover);
    }
  }

  &__logo {
    width: 32px;
    fill: var(--accent-personal);
  }
}
